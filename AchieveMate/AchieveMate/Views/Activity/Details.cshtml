@model AchieveMate.ViewModels.Activity.ActivityVM


<h1>Activity Details</h1>

<div class="elements-details-card">
    <div class="detail-item">
        <label asp-for="Name"></label>
        <span>@Model.Name</span>
    </div>

    <div class="detail-item">
        <label asp-for="Notes"></label>
        <span>@Model.Notes</span>
    </div>

    <div class="detail-item">
        <label asp-for="SpentTime"></label>
        <span>@Model.SpentTime.Display()</span>
    </div>

    <div class="detail-item">
        <label asp-for="Status"></label>
        <span>@Model.Status</span>
    </div>

    <div class="detail-item">
        <label asp-for="StartAt"></label>
        <span>@Model.StartAt</span>
    </div>

    <div class="detail-item">
        <label asp-for="ExpiryDate"></label>
        <span>@Model.ExpiryDate</span>
    </div>

    <div class="detail-item">
        <label asp-for="EndAt"></label>
        <span>@Model.EndAt</span>
    </div>

    <div class="actions">
        <a class="btn back-btn" asp-Controller="Activity" asp-Action="Index">Back to Activities List</a>
        <a class="btn edit-btn" asp-Controller="Activity" asp-Action="Update" asp-route-id="@Model.Id">Update Activity</a>
    </div>
</div>
